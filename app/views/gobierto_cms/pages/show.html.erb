<% title(@page.title) %>
<% description(truncate(strip_tags(@page.body), length: 100)) %>

<% content_for :breadcrumb_current_item do %>
  <strong>
    <% if @collection && !@section %>
      <%= @collection.title %>
    <% elsif @section %>
      <%= link_to @section.title, gobierto_cms_path(@section.slug) %>
    <% end %>
  </strong>
<% end %>

<%= render "gobierto_cms/templates/#{@page.template}" %>
