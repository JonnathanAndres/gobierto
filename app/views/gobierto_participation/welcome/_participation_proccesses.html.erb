<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator"><%= t("gobierto_participation.shared.ongoing_processes") %></h2>
        <p class="soft"><%= t("gobierto_participation.shared.consultation_processes") %></p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 current_processes">
        <div class="pure-g two_by_two">
          <% @processes.each do |process| %>
            <%= render 'gobierto_participation/processes/process_teaser', { process: process } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
