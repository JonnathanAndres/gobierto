<% if @issue %>
  <% content_for :breadcrumb_current_item do %>
    <strong>
      <%= link_to t('gobierto_participation.layouts.menu_subsections.issues'), gobierto_participation_issues_path %>
    </strong>

    <span role="separator">/</span>

    <h1>
      <%= link_to @issue.name, gobierto_participation_issue_path(@issue.slug) %>
    </h1>
  <% end %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('gobierto_participation.shared.documents') %>
          </h2>
          <%= render 'gobierto_participation/shared/attachments/attachments_filter', { issues: @issues } %>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <% if @attachments && @attachments.any? %>
          <% @attachments.each do |attachment| %>
            <%= render 'gobierto_participation/shared/attachments/attachment_teaser', { attachment: attachment, issue: @issue } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
