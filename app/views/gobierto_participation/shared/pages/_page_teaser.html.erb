<div class='news_teaser'>
  <h3>
    <% if @issue %>
    <%= link_to page.title , gobierto_participation_issue_page_path(id: page.slug, issue_id: @issue.slug) %>
    <% elsif try(:current_process).present? %>
      <%= link_to page.title , gobierto_participation_process_page_path(id: page.slug, process_id: current_process.slug) %>
    <% elsif current_module == "gobierto_participation" %>
      <%= link_to page.title , gobierto_participation_page_path(id: page.slug) %>
    <% end %>
  </h3>

  <div class='meta'>
    <time><%= time_ago_in_words(page.created_at) %></time>
  </div>

  <% if page.main_image %>
    <%= image_tag page.main_image, title: page.title, width: '221px', class: 'pure-img m_v_1' %>
    <p>
      <%= truncate(strip_tags(page.body), length: 60, escape: false) %>
    </p>
  <% else %>
    <%= truncate(strip_tags(page.body), length: 60, escape: false) %>
  <% end %>
</div>
