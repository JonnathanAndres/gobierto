<%= form_for(@process_information_form, as: :process, url: @process_information_form.persisted? ? admin_participation_process_process_information_path(@process_information_form) : admin_participation_processes_path, data: { 'globalized-form-container' => true }) do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-16-24">
      <div class="globalized_fields">
        <%= render "gobierto_admin/shared/form_locale_switchers" %>

        <% current_site.configuration.available_locales.each do |locale| %>
          <div class="form_item textarea" data-locale="<%= locale %>">
            <%= label_tag "process[information_text_translations][#{locale}]", f.object.class.human_attribute_name(:information_text) %>
            <%= rich_text_area_tag "process[information_text_translations][#{locale}]", f.object.information_text_translations && f.object.information_text_translations[locale], placeholder: t('.placeholders.information_text', lang: locale) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="pure-u-1 pure-u-md-2-24"></div>

    <%= render partial: 'gobierto_admin/shared/save_widget', locals: { f: f, levels: [] } %>

  </div>
<% end %>
